{% extends locals.path + '/index.njk' %}

{% block head %}
<link rel="stylesheet" href="/files/css/viewpost.css">
<link rel="stylesheet" href="/files/css/home.css">
<link rel="stylesheet" href="/files/css/post-short.css">
{% endblock %}

{% block content %}
<div class="viewpost">
  <span> {{ post.title }}</span>
</div>
<div class="viewpost-info-all">
<div class="viewpost-info">
  <div class="viewpost-info-in">
  <div class="view-post-head-right">
  <div class="profile-img"></div>
  <div class="col-name">
  <span>محمد سیفی مرندی</span>
  </div>
  </div>
<button class="follow-btn">دنبال کردن <i class="fa fa-user-plus" aria-hidden="true"></i></button>
<div class="viewpost-icon">
 <span><i class="fa fa-calendar" aria-hidden="true"></i>&nbsp 2 روز پیش </span>
 <span>
    <i class="fa fa-eye" aria-hidden="true"></i>
    {{ post.viewers | length }}
    بازدید
 </span>
 <span> مدت زمان مطالعه&nbsp&nbsp{{ post.minutes }}&nbsp دقیقه </span>
 </div>
 </div>
 </div>
 <div class="event">
   <div class="posts-event">
     <div class="dislike-btn">
        <form action="/post/dislike/{{ post._id }}" method="post">
        <button type="submit"><i class="fa fa-thumbs-down" aria-hidden="true"></i></button>
       </form>
     </div>
 <div class="like-btn">
   <form action="/post/like/{{ post._id }}" method="post">
     <button type="submit"><i class="fa fa-thumbs-up" aria-hidden="true"></i></button>

   </form>
 </div>
 <span class="like-spn"> {{ post.likes | length }}</span>

 </div>
 </div>
 </div>
<div class="viewpost-body">
 <div class="viewpost-text">
    <p>{{ post.content }}</p>
 </div>
  <div class="viewpost-left">

  </div>

</div>
<div class="user-info">
 <div class="uesr-info-right">

 </div>
 <div class="user-info-left">
   <span class="username">محمد سیفی مرندی</span>
   <p>برنامه نویس و توسعه دهنده وب و طراح رابط کاربری و رابط تجربی و گرافیک دیزاینز</p>
 </div>
</div>
{# <h1>Author: {{ post.author }}</h1>
<h1>Created at: {{ post.createdAt }}</h1> #}

{% if member %}

{% endif %}
{% endblock %}

{% block scripts %}
<script>
  const URL = '{{ post._id }}';
</script>
<script src='/files/js/ipchecker.js'></script>
{% endblock %}
