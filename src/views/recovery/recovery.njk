{% extends locals.path + '/index.njk' %}

{% block head %}
<link rel="stylesheet" href="/files/css/recovery.css">
{% endblock %}

{% block content %}
<div class="page-title">
<span>فراموشی رمز عبور</span>
</div>
<div class="recovery">
  <form action="/recovery" method="post" name="recovery-form">

    <input
     type="email"
     name="email"
     required
     placeholder="ایمیل"
     maxlength="200">


     <div class="cap">
     <p id="svg-captcha"></p>
     <i class="icon-refresh" id="change-captcha"></i>
     </div>

     <input
       type="text"
       name="captcha"
       required
       placeholder="کد امنیتی"
       maxlength="10">

    <input
      type="submit"
      value="درخواست" class="green-btn">

  </form>
  </div>
{% endblock %}

{% block scripts %}
<script src="/files/js/recovery.js"></script>
{% endblock %}
