{% extends locals.path + '/u.njk' %}

{% block head %}
<link rel="stylesheet" href="/files/css/lib/cropper.css">
<link rel="stylesheet" href="/files/css/setting-cropper.css">
<link rel="stylesheet" href="/files/css/post.css">
{% endblock %}

{% block content %}
<div class="page-title">
<i class="fa fa-edit"></i>  <span>پست کردن</span>
</div>
<input type="file" title="اضافه کردن عکس" id="add-photo-to-post">
<div class="post-container">
  <form
    action="/u/post/add"
    method="post"
    name="add-post">

    <input
      type="text"
      name="title"
      required
      placeholder="عنوان"
      maxlength="100">
        <div class="add-post">
          <div class="add-post-icons">
              <i class="fa fa-bold"></i>
              <i class="fa fa-italic"></i>
              <i class="fa fa-list-ol"></i>
              <i class="fa fa-list-ul"></i>
              <i class="fa fa-quote-left"></i>
              <i class="fa fa-link"></i>
          </div>
          <div>
    <textarea
    name="content"
    rows="8"
    cols="80"
    required
    placeholder="متن"
    maxlength="10000"></textarea>
    </div>
</div>
    <input type="file" id="upload" value="Upload">

    <input
    type="submit"
    value="ثبت">

  </form>
  </div>
  <button id="preview">Preview</button>

  <div id="show"></div>

  <div id="all">
  <div class="container">
    <img id="img-preview">
  </div>
  <div class="container">
    <img id="done">
  </div>
  </div>
{% endblock %}

{% block scripts %}
<script
  src="https://cdnjs.cloudflare.com/ajax/libs/showdown/1.8.6/showdown.min.js">
</script>
<script src="/files/js/lib/cropper.js"></script>
<script src="/files/js/add-post.js"></script>
{% endblock %}
