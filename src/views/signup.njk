{% extends './layouts/index.njk' %}

{% block head %}{% endblock %}

{% block content %}
<div class="page-title">
 <span>عضویت</span>
</div>
  <form action="/signup" method="post" name="signup-form">
    <div class="signup">
      <div class="reg">
        <div class="head">
          <h1>عضویت</h1>
          <p>حساب کاربری خود را بسازید!</p>
        </div>
        <input type="text" name="fname" required="required" placeholder="نام" maxlength="50">
        <input type="text" name="lname" required="required" placeholder="نام خانوادگی" maxlength="50">

        <input type="text" name="username" required="required" placeholder="نام کاربری" maxlength="100">
        <input type="email" name="email" required="required" placeholder="ایمیل" maxlength="200">
        <p id="svg-captcha"></p>
        <input type="password" name="captcha" required="required" placeholder="کد امنیتی" maxlength="10">

        <input type="password" name="password" required="required" placeholder="رمز عبور" maxlength="100">

        <div class="row2">
          <input type="submit" value="ثبت" class="sub2">
        </div>
      </div>

      <div class="foot">
        <a href="/login">
          <p>حساب داری؟</p>
        </a>
      </div>
    </div>
  </form>
{% endblock %}

{% block scripts %}
  <script src="/files/js/signup.js"></script>
{% endblock %}
