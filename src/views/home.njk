{% extends locals.path + '/index.njk' %}

{% block head %}
{% endblock %}

{% block content %}
  <div class="contact" id="particles-js">
    <div id="contact-texts">
      <img src="/files/image/osc.png" width="80px">
      <h1>جامعه متن باز قم</h1>
    </div>
  </div>
  <div class="description">
    <div class="col-des">
      <h2>به جامعه متن باز قم خوش آمدید</h2>
      <p>جامعه متن‌باز قم با هدف فراهم کردن محیطی برای به اشتراک گذاری دانش و تجربیات افرادی که در زمینه‌های مختلف متن‌باز فعالیت می‌کنند تاسیس شده است.</p>
    </div>
    <div class="des-info">
      <div class="dec-content">
        {% if locals.logged %}
        <div>
          <span>برای پست گزاشتن کلیک کنید<span>
        </div>
        <div>
          <a href="/u/post/add">پست گزاشتن</a>
          <a href="/u">داشبورد</a>
        </div>
        {% else %}
        <div>
          <span>برای پست گذاشتن ابتدا ثبت نام کنید<span>
        </div>
        <div>
          <a href="/login">ورود</a>
          <a href="/signup">ثبت نام</a>
        </div>
        {% endif %}
      </div>
    <img src="/files/image/chrome.png">
</div>
  </div>
  {% if lastConf.empty %}
    <h1>هیچ ارائه ای وجود ندارد</h1>
  {% else %}
  <section class="evand-banner">
    <div class="subject">
         <h2>موضوعه ارائه بعدی:</h2>
         <span>{{ lastConf.title }}</span>
       </div>
         <div>توسط :
           {% if lastConf.provider.avatar %}
           <img src="/img/{{ lastConf.provider.avatar }}">
           {% else %}
           <img src="/files/image/default-user.png">
           {% endif %}
             <span><i class="fa fa-circle"></i><span>
             <span>
               {{ lastConf.provider.fname }} {{ lastConf.provider.lname }}
             </span>
         </div>
         <div class="date-time">
         <span>تاریخ برگزاری : 96/11/30</span>
         </div>
         <a href="https://evand.com/events/qomosc16">مشاهده در ایوند</a>
  </section>
  {% endif %}
  <div class="home-content">
    <div class="last-posts">
      <h3>مطالب اخیر</h3>
      <div class="latset-posts">
        {% for i in posts %}
          <div class="posts">
            <div class="posts-head">
              <div class="posts-head-right">
                <a href="/user/{{ i.author.username }}">
                  <div class="profile-img" style="background-image: url(/img/{{ i.author.avatar }}); background-size: cover;"></div>
                </a>
                <div class="col-name">
                  <a href="/user/{{ i.author.username }}">
                    <span title="نام نویسنده">{{ i.author.fname }}
                      {{ i.author.lname }}</span>
                  </a>
                  <small class="spn-time">{{ i.createdAt }}</small>
                </div>
              </div>
            </div>
            <a href="/article/{{ i._id }}">
              <div class="posts-pic">
                <img src="/img/{{ i.avatar }}">
              </div>
            </a>
            <div class="posts-body">
              <div class="posts-title">
                <a href="/article/{{ i._id }}">
                  <span>{{ i.title }}</span>
                </a>
              </div>
              <div class="posts-summary">
                <p>{{ i.content }}</p>
              </div>
            </div>
            <div class="posts-footer">
              <div class="posts-event">
                <div class="like-btn" title="لایک ها">
                  <i class="fa fa-heart" aria-hidden="true"></i>
                  <span>{{ i.likes }}</span>
                </div>
                <div class="view-btn" title="بازدید ها">
                  <i class="fa fa-eye" aria-hidden="true"></i>
                  <span>{{ i.viewers }}</span>
                </div>
              </div>
              <a href="/article/{{ i._id }}">
                <span>بیشتر بخوانید . . .</span>
              </a>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
    </div>
     {% if locals.logged %}
    <section class="fixedfooter">
      <a href="/u/post/add">پست کن<i class="fa fa-edit" aria-hidden="true"></i></a>
      {% if member.type >= 3 %}
      <a href="/u/sub">افراد درخواست داده<i class="fa fa-user-plus" aria-hidden="true"></i></a>
      <a href="/u/sub/manage">مدیریت کاربران<i class="fa fa-users" aria-hidden="true"></i></a>
      <a href="/u/conference/manage">مدیریت ارائه ها<i class="fas fa-inbox"></i></a>
      {% endif %}
      <a href="/u/conference/add">ارائه دادن<i class="fab fa-weixin"></i></a>
      <a href="/u/post/all">پست های من<i class="far fa-envelope-open" aria-hidden="true"></i></a>
      <a href="/u/gallery/add">ارسال عکس<i class="fas fa-camera"></i></a>
      <a href="/u/gallery">گالری من  <i class="far fa-images"></i></a>
      <a href="/u/setting">تنظیمات<i class="fa fa-cog" aria-hidden="true"></i></a>
      <a href="/u/logout">خروج<i class="fas fa-sign-out-alt"></i></a>
    </section>
    {% endif %}
  {% endblock %}

  {% block scripts %}
    <script src="/files/js/lib/particles.min.js"></script>
    <script>
    particlesJS.load('particles-js', '/files/js/lib/p.json', function() {
    });
    </script>
  {% endblock %}
