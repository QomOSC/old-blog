{% extends locals.path + '/index.njk' %}

{% block head %}
{% endblock %}

{% block content %}
{% if empty != true %}
{% for i in posts %}
<div style="border: 1px solid red;">
  <a href="/viewpost/{{ i._id }}">{{ i.title }}</a>
  <h3>{{ i.content }}</h3>
  <h5>{{ i.minutes }} minutes read</h5>
  <p>Created at: {{ i.createdAt }}</p>
  <p>Author: {{ i.author.fname }} {{ i.author.lname }}</p>
  <p>Author Username: {{ i.author.username }}</p>
</div>
{% endfor %}
{% endif %}
{% endblock %}

{% block scripts %}
<script>
  const changeIcon = x => x.classList.toggle('change');
</script>
{% endblock %}
