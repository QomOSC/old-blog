<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="/files/css/font-fa.css">
    <link rel="stylesheet" href="/files/css/main.css">
    <link rel="stylesheet" href="/files/css/header.css">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="/files/css/lib/izi.min.css">
    <link href="https://use.fontawesome.com/releases/v5.0.6/css/all.css" rel="stylesheet">
    <link rel="stylesheet" href="/files/css/dropdown.css">

    <title>Qom OSC</title>
    <title>{{ title }}</title>
    <link rel="shortcut icon" href="/files/image/favicon.ico">
    {% for item in locals.header %}
      {{ item | safe }}
    {% endfor %}

    {% block head %}{% endblock %}
  </head>
  <body>
    <header>
      <div class="dropdown" id="icon-container" onclick="changeIcon(this)">
        <button onclick="myFunction()" class="dropbtn">
          <div class="bar1"></div>
          <div class="bar2"></div>
          <div class="bar3"></div>
        </button>
          <div id="myDropdown" class="dropdown-content">
            <a href="/u/post/add">پست کن</a>
            {% if member.type >= 3 %}
            <a href="/u/sub">افراد درخواست داده</a>
            <a href="/u/sub/manage">مدیریت کاربران</a>
            <a href="/u/conference/manage">مدیریت ارائه ها</a>
            {% endif %}
            <a href="/u/conference/add">ارائه دادن</a>
            <a href="/u/post/all">پست های من</a>
            <a href="/u/setting">تنظیمات</a>
            <a href="/u/logout">خروج</a>
          </div>
      </div>
      <ul class="cpanel">
        <li class="tooltip">
          <span class="tooltiptext">پست کن</span>
          <a href="/u/post/add">
            <i class="fa fa-edit" aria-hidden="true"></i>
          </a>
        </li>
        {% if member.type >= 3 %}
          <li class="tooltip">
            <span class="tooltiptext">افراد درخواست داده</span>
            <a href="/u/sub">
              <i class="fa fa-user-plus" aria-hidden="true"></i>
            </a>
          </li>
          <li class="tooltip">
            <span class="tooltiptext">مدیریت کاربران</span>
            <a href="/u/sub/manage">
              <i class="fa fa-users" aria-hidden="true"></i>
            </a>
          </li>
          <li class="tooltip">
            <span class="tooltiptext">مدریت کنفرانس ها</span>
            <a href="/u/conference/manage">
              <i class="fas fa-inbox"></i>
            </a>
          </li>
          {% endif %}
        <li class="tooltip">
          <span class="tooltiptext">ارائه کنفرانس</span>
          <a href="/u/conference/add">
            <i class="fab fa-weixin"></i>
          </a>
        </li>
        <li class="tooltip">
          <span class="tooltiptext">پست های من</span>
          <a href="/u/post/all">
            <i class="far fa-envelope-open" aria-hidden="true"></i>
          </a>
        </li>
        <li class="tooltip">
          <span class="tooltiptext">تنظیمات</span>
          <a href="/u/setting">
            <i class="fa fa-cog" aria-hidden="true"></i>
          </a>
        </li>
        <li class="tooltip">
          <span class="tooltiptext">خروج</span>
          <a href="/u/logout" onclick="localStorage.setItem('loggedout', '1')">
            <i class="fas fa-sign-out-alt"></i>
          </a>
        </li>
      </ul>

      <div class="profile-avatar-header">
        {% if member.avatar %}
          <img src="/img/{{ member.avatar }}" alt="عکس کاربر">
        {% else %}
          <img src="/files/image/default-user.png" alt="عکس کاربر">
        {% endif %}
        <a href="/u">{{ member.fname }}
          {{ member.lname }}</a>
      </div>
      <div>
        <a href="/" id="long-title-name" class="title">جامعه متن باز قم</a>
        <a href="/" id="short-title-name" class="title">QOM OSC</a>
      </div>
    </header>
    {% block content %}{% endblock %}

    {% for item in locals.header %}
      {{ item | safe }}
    {% endfor %}

    <script src="/files/js/lib/izi.min.js"></script>
    <script src="/files/js/common-funcs.js"></script>
    <script src="/files/js/home-localstorage.js"></script>
    <script src="/files/js/lib/validator.js"></script>
    <script src="/files/js/lib/checkstatus.js"></script>
    <script src="/files/js/dropdown.js"></script>
    {% block scripts %}{% endblock %}
  </body>
</html>
