<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="/files/css/font-fa.css">
    <link rel="stylesheet" href="/files/css/main.css">
    <link rel="stylesheet" href="/files/css/header.css">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="/files/css/lib/izi.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <title>Qom OSC</title>
    <title>{{ title }}</title>
    <link rel="shortcut icon" href="/files/image/favicon.ico">
    {% for item in locals.header %}
      {{ item | safe }}
    {% endfor %}

    {% block head %}{% endblock %}
  </head>
  <body>
    <header>
      <div id="icon-container" onclick="changeIcon(this)">
        <div class="bar1"></div>
        <div class="bar2"></div>
        <div class="bar3"></div>
      </div>
      <ul class="cpanel">
        <li class="tooltip">
          <span class="tooltiptext">پست کن</span>
          <a href="/u/post/add">
            <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
          </a>
        </li>
        {% if member.type >= 3 %}
          <li class="tooltip">
            <span class="tooltiptext">افراد درخواست داده</span>
            <a href="/u/sub">
              <i class="fa fa-user-plus" aria-hidden="true"></i>
            </a>
          </li>
        <li class="tooltip">
          <span class="tooltiptext">مدیریت کاربران</span>
        <a href="/u/sub/manage">
          <i class="fa fa-address-book" aria-hidden="true"></i>
        </a>
      </li>
      <li class="tooltip">
        <span class="tooltiptext">مدریت کنفرانس ها</span>
      <a href="/u/conference">
        <i class="fa fa-address-book" aria-hidden="true"></i>
      </a>
    </li>
    {% endif %}
    <li class="tooltip">
      <span class="tooltiptext">پست های من</span>
      <a href="/u/post/all">
        <i class="fa fa-envelope-open-o" aria-hidden="true"></i>
      </a>
    </li>
    <li class="tooltip">
      <span class="tooltiptext">تنظیمات</span>
      <a href="/u/setting">
        <i class="fa fa-cog" aria-hidden="true"></i>
      </a>
    </li>
    <li class="tooltip">
      <span class="tooltiptext">خروج</span>
      <a href="/u/logout" onclick="localStorage.setItem('loggedout', '1')">
        <i class="fa fa-sign-out" aria-hidden="true"></i>
      </a>
    </li>
      </ul>

  <div class="profile-avatar-header">
    {% if member.avatar %}
      <img src="/img/{{ member.avatar }}" alt="عکس کاربر">
    {% else %}
      <img src="/files/image/default-user.png" alt="عکس کاربر">
    {% endif %}
    <a href="/u">{{ member.fname }}
      {{ member.lname }}</a>
  </div>
</header>
{% block content %}{% endblock %}

{% for item in locals.header %}
  {{ item | safe }}
{% endfor %}

  <script src="/files/js/lib/izi.min.js"></script>
  <script src="/files/js/lib/validator.js"></script>
  {% block scripts %}
  {% endblock %}
</body>
</html>
