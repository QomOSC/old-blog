{% extends locals.path + '/index.njk' %}

{% block head %}
{% endblock %}

{% block content %}
{% if empty %}
  <h1>هیچ کنفرانسی نیس</h1>
{% else %}
{% for i in confs %}
  <h1>{{ i.provider }}</h1>
  <h1>{{ i.title }}</h1>
  <h1>{{ i.description }}</h1>
  {% if i.avatar %}
  <img src="/img/{{ i.avatar }}">
  {% endif %}
  <h1>{{ i.createdAt }}</h1>
{% endfor %}
{% endif %}
{% endblock %}

{% block scripts %}
  <script src="/files/js/login.js"></script>
{% endblock %}
