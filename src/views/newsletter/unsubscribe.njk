{% extends locals.path + '/index.njk' %}

{% block head %}
<link rel="stylesheet" href="/files/css/unsubscribe.css">
{% endblock %}

{% block content %}
<div class="page-title">
 <span>خروج از خبرنامه</span>
</div>
<div class="unsubscribe-container">
  <form action="/unsubscribe" method="post" name="unsub-form">
    <input
     type="email"
     name="email"
     required
     placeholder="ایمیل"
     maxlength="200">

     <p id="svg-captcha"></p>

     <input
       type="password"
       name="captcha"
       required
       placeholder="کد امنیتی"
       maxlength="10">

    <input
      type="submit"
      value="درخواست"
      class="green-btn">

  </form>
  </div>
{% endblock %}

{% block scripts %}
<script src="/files/js/unsubscribe.js"></script>
{% endblock %}
