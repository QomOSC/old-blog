{% extends locals.path + '/index.njk' %}

{% block head %}
<link rel="stylesheet" href="/files/css/user.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
{% endblock %}

{% block content %}
<div id="container">
  <div id="user-panel">
    <h1>{{ member.fname }} {{ member.lname }}</h1>
    {% if member.avatar %}
    <img src="/files/image/matin.jpg" alt="عکس کاربر">
    {% endif %}
    <p id="user-description"></p>
    <table id="user-info">
      <tr>
        <td title="ایمیل"><i class="fa fa-envelope" aria-hidden="true"></i></td>
        <td>{{ member.email }}</td>
      </tr>
      <tr>
        <td title="یوزرنیم"><i class="fa fa-user" aria-hidden="true"></i></td>
        <td>{{ member.username}}</td>
      </tr>
        {% if member.description %}
        <tr>
          <td title="درباره کاربر"><i class="fa fa-info" aria-hidden="true"></i></td>
          <td>{{ member.description }}</td>
        </tr>
        {% endif %}
      <tr>
        <td><i class="fa fa-clock-o" aria-hidden="true"></i></td>
        <td>مدت حظور: {{ member.createdAt }}</td>
      </tr>
    </table>
  </div>
  <div id="works">
    <h1>پست های اخیر</h1>
    <div class="recent-posts">
      {% for i in posts %}
        <div class="post-box">
          <img src="/files/image/matin.jpg" alt="عکس کاربر">
          <h2 class="post-title">{{ i.title }}</h2>
          <p class="post-content">{{ i.content }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% endblock %}

{% block scripts %}
{% endblock %}
